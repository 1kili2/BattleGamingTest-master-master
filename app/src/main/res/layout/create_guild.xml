<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorPrimary"
        android:contentDescription="@string/app_name"
        android:scaleType="center"
        android:text="@string/create_guild"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/guild_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:height="25dp"
                android:minWidth="100dp"
                android:text="@string/guild_name"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/guild_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:height="25dp"
                android:minWidth="100dp"
                android:text="@string/guild_logo"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/guild_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:height="25dp"
                android:minWidth="100dp"
                android:text="Ciudad/Pueblo:"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_guild_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="5dp"
                android:height="20dp"
                android:background="@drawable/textbox"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingBottom="1dp"
                android:paddingLeft="1dp"
                android:paddingStart="1dp"
                android:paddingTop="1dp" />

            <EditText
                android:id="@+id/edit_guild_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="5dp"
                android:height="20dp"
                android:background="@drawable/textbox"
                android:ems="10"
                android:inputType="text"
                android:paddingBottom="1dp"
                android:paddingLeft="1dp"
                android:paddingStart="1dp"
                android:paddingTop="1dp" />

            <EditText
                android:id="@+id/edit_guild_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="5dp"
                android:height="20dp"
                android:background="@drawable/textbox"
                android:ems="10"
                android:inputType="text"
                android:paddingBottom="1dp"
                android:paddingLeft="1dp"
                android:paddingStart="1dp"
                android:paddingTop="1dp" />

        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/guild_motto"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="5dp"
        android:height="200dp"
        android:background="@drawable/textbox"
        android:ems="10"
        android:gravity="top"
        android:hint="@string/guild_motto"
        android:inputType="textMultiLine|textCapSentences" />

    <Button
        android:id="@+id/Done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="CREATE" />

</LinearLayout>